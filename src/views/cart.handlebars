<div class="container">
<nav>
  <ul>
    <li><a href="/">HOME</a></li>
    <li><a href="/products">PRODUCTOS</a></li>
    <li><a href="/cart/646267ba8cc04a3efca60438">CARRITO</a></li>
  </ul>
  </nav>
    <h1 class="title">ORDEN DE COMPRA</h1>
    <br>
    <br>
  <div class="gallery" id="product-container">
    {{#each cart.products}}
      <div class="product">
        <h2>{{this.product.title}}</h2>
        <p>Unidades: {{this.quantity}}</p>
          <img src="{{this.product.img}}" alt="{{this.title}}">
        <p>{{this.product.description}}</p>
        <p class="parra">Price ${{this.product.price}}</p>
        <p>{{this.product.category}}</p>
        <p class="parra">Stock {{this.product.stock}}</p>
      </div>
    {{/each}}
  </div>
  <br>
  <br>
    <h2>Total: ${{total}}</h2>
  </div>

