<div class="container">
    <h1 class="title">Orden de Compra</h1>
  <div class="gallery">
    {{#each cart.products}}
      <div class="product">
        <h2>{{this.product.title}}</h2>
        <p>{{this.quantity}}</p>
          <img src="{{this.product.img}}" alt="{{this.title}}">
        <p>{{this.product.description}}</p>
        <p class="parra">Price ${{this.product.price}}</p>
        <p>{{this.product.category}}</p>
        <p class="parra">Stock {{this.product.stock}}</p>
      
      </div>
    {{/each}}
  </div>
    <h2>Total: ${{total}}</h2>
  </div>
