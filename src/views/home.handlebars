<div class="container">
  <nav>
    {{#if isAdmin}}
    <div class="user-dropdown">
      <button class="user-dropdown-btn">
        <a href="/admin">PANEL DE CONTROL</a>
      </button>
    </div>
    {{/if}}
    <ul>
      <li><a href="/">HOME</a></li>
      <li><a href="/products">PRODUCTOS</a></li>
      <li><a href="/chat">CHAT</a></li>
      <li><a href="/cart/{{user.cart}}">CARRITO</a></li>
    </ul>
    {{#if message}}
      {{message}}
    {{/if}}
    <div class="user-dropdown">
      <button class="user-dropdown-btn">{{user.role}}</button>
      <div class="user-dropdown-content">
        <p class="users">{{user.first_name}} {{user.last_name}}</p>
        <a href="/current"><button>Panel User</button></a>
        <a href="/api/session/logout">
          <button>Cerrar Sesi√≥n</button>
        </a>
      </div>
    </div>
  </nav>
  
  <div class="formulario">
    <form action="/products" method="GET">
      <input class="input" type="text" name="query" placeholder="Buscar producto...">
      <button type="submit">Buscar</button>
    </form>
  </div>

  <div class="gallery">
    {{#each products}}
    <div class="product">
      <h2>{{this.title}}</h2>
      <img src="{{this.img}}" alt="{{this.title}}">
      <p>{{this.description}}</p>
      <p>${{this.price}}</p>
      <p>Stock: {{this.stock}}</p>
      <button class="cartB" data-product-id="{{this._id}}" data-user-id="{{../user._id}}" data-cart-id="{{../user.cart}}">Agregar al carrito</button>
    </div>
    {{/each}}
  </div>
</div>

<script src="js/buyProd.js"></script>